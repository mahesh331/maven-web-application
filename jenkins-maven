pipeline{
  agent any
  tools {
  maven 'maven3'
}
  stages{
     stage("git checkout"){
           steps{
           git credentialsId: 'git', url: 'https://github.com/mahesh331/maven-web-application.git'
           
           }     
     }
     stage("maven build"){
        steps{
        sh  script: 'mvn clean install package'
         sh 'mv target/*.war target/webapp.war' 
 }
     
     }
  }




}
